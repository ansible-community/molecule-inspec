extends: default
ignore: |
  *.github/workflows/
  *.molecule/
  molecule*/cookiecutter/
  .tox
  # HACK: https://github.com/pyupio/pyup/issues/346
  .pyup.yml

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  document-start: disable
  line-length: disable
